<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/super_rel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_rel">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_list_business"
                android:layout_marginTop="24dp"
                android:id="@+id/img_head"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_head"
                android:text="List a business"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/robo_bold"
                android:layout_marginTop="16dp"
                android:textAllCaps="true"
                android:textSize="32dp"
                android:id="@+id/tv_header"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/tv_header"
                android:text="Enter Shop Name"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                android:id="@+id/tv_shop_name"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_name"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:hint="Nike Factory Outlet"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/light_grey_hint"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/white_border_rectangle"
                android:id="@+id/et_shop_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/et_shop_name"
                android:text="Enter Owner Name"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tv_owner_name"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_owner_name"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:hint="John Doe"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/light_grey_hint"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/white_border_rectangle"
                android:id="@+id/et_name"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/et_name"
                android:text="@string/enter_email"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tv_email"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:hint="account@gmail.com"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/light_grey_hint"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/white_border_rectangle"
                android:id="@+id/et_email"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/incorrect_red"
                android:layout_below="@id/et_email"
                android:text="Please enter a correct email"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:id="@+id/tv_error_email"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/tv_error_email"
                android:text="@string/enter_mobile"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tv_mobile"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobile"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:hint="9876543210"
                android:maxLength="10"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/light_grey_hint"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/white_border_rectangle"
                android:id="@+id/et_mobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/incorrect_red"
                android:layout_below="@id/et_mobile"
                android:text="Please enter a mobile number"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:id="@+id/tv_error_mobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/tv_error_mobile"
                android:text="Address"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18dp"
                android:layout_marginTop="24dp"
                android:id="@+id/tv_address"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address"
                android:layout_marginTop="12dp"
                android:minHeight="100dp"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:hint="Example\n\nUnit B/45, Sri Ramanjenaya Complex,\nMarathalli Main Rd,\nMararhalli, Bengaluru"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/light_grey_hint"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/white_border_rectangle"
                android:id="@+id/et_address"/>


            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_check"
                android:layout_below="@id/et_address"
                android:layout_marginVertical="36dp"
                android:layout_alignParentRight="true"
                android:id="@+id/img_done"/>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>