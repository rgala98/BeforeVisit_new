        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/before_visit_logo"
            android:layout_marginVertical="8dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_menu"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_menu"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_notification_bell"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_notification_bell"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@drawable/grey_background_10"
        android:backgroundTint="@color/light_black"

        android:id="@+id/expanded_menu">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:id="@+id/img_user"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="NEW USER"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/img_user"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:id="@+id/tv_new_user"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_new_user">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_centerHorizontal="true"
            android:text="HOME"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_centerHorizontal="true"
            android:text="PROFILE"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_home"
            android:id="@+id/tv_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_centerHorizontal="true"
            android:text="SAVED PLACES"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_profile"
            android:id="@+id/tv_saved_places"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="FEEDBACK"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_saved_places"
            android:id="@+id/tv_feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="LIST A BUSINESS"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_feedback"
            android:id="@+id/tv_list_business"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="HELP &amp; SUPPORT"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_list_business"
            android:id="@+id/tv_help_support"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="ABOUT US"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_help_support"
            android:layout_marginBottom="40dp"
            android:id="@+id/tv_about_us"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>